<body>
	<div class="container" id="wrap" align="center">
		<h1>게시글 리스트</h1>
		<!-- <table class="list"> -->
		<table class="table table-striped table-dark">
			<tr>
				<td colspan="5" style="border: white; text-align: right"><a
					href="BoardServlet?command=board_write_form">게시글 등록</a></td>
			</tr>
			<!-- <tr>
				<th>번호</th>
				<th>제목</th>
				<th>작성자</th>
				<th>작성일</th>
				<th>조회</th>
			</tr> -->
			
			    <tr>
			      <th scope="col">번호</th>
			      <th scope="col">제목</th>
			      <th scope="col">작성자</th>
			      <th scope="col">작성일</th>
			      <th scope="col">조회</th>
			    </tr>
			  
			
			<tbody>
			<c:forEach var="board" items="${boardList }">
				<tr class="record">
					<th scope="row">${board.num }</th>
					<td><a href="BoardServlet?command=board_view&num=${board.num}">
							${board.title } </a></td>
					<td>${board.name}</td>
					<td><fmt:formatDate value="${board.writedate }" /></td>
					<td>${board.readcount}</td>
				</tr>
			</c:forEach>
			</tbody>
		</table>
	</div>
</body>
</html>